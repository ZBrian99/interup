---
// import Header from '@/layouts/Header.astro';
// import Footer from '@/layouts/Footer.astro';
import '@fontsource-variable/nunito';
import '@fontsource-variable/inter';
import '@/styles/base.css';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/logoff.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<meta name='title' content={title} />
		<meta
			name='description'
			content='Combinamos innovación tecnológica con un enfoque personalizado y cercano para impulsar el crecimiento sostenible de tu negocio.'
		/>

		<meta property='og:type' content='website' />
		<meta property='og:url' content='https://interup.dev/' />
		<meta property='og:title' content={title} />
		<meta
			property='og:description'
			content='Combinamos innovación tecnológica con un enfoque personalizado y cercano para impulsar el crecimiento sostenible de tu negocio.'
		/>
		<meta property='og:image' content='/miniatura.webp' />

		<meta property='twitter:card' content='summary_large_image' />
		<meta property='twitter:url' content='https://interup.dev/' />
		<meta property='twitter:title' content={title} />
		<meta
			property='twitter:description'
			content='Combinamos innovación tecnológica con un enfoque personalizado y cercano para impulsar el crecimiento sostenible de tu negocio.'
		/>
		<meta property='twitter:image' content='/miniatura.webp' />
	</head>
	<body>
		<Header />
		<slot />
		<WhatsAppButton />
		<Footer />
	</body>
</html>

<style is:global></style>
