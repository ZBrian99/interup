---
const menuItems = [
	{ href: '#servicios', text: 'Servicios' },
	{ href: '#proceso', text: 'Cómo trabajamos' },
	{ href: '#proyectos', text: 'Proyectos' },
	{ href: '#contacto', text: 'Contacto' },
];

const solutionItems = [
	{ text: 'Páginas Web' },
	{ text: 'Aplicaciones Web' },
	{ text: 'Sistemas de Gestión' },
	{ text: 'E-commerce' },
];
const phoneNumber = '542236698045';
const message = '¡Hola! Me gustaría obtener más información sobre sus servicios.';
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---

<footer class='bg-purple-1 text-white pt-40'>
	<div class='bg-purple-3 relative z-10'>
		<img
			src='/footer-wave.svg'
			alt='footer wave'
			class='absolute top-0 left-0 right-0 h-[15%] sm:h-[30%] md:h-[75%] w-full lg:h-full -z-10 -translate-y-[96%] select-none'
		/>
		<img
			src='/ovni.svg'
			alt='Fondo decorativo'
			class='absolute top-[-25%] sm:top-[-50%] md:top-[-110%] right-0 z-10 max-w-[50%] select-none'
		/>
		<div class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 mx-auto px-6 gap-y-8 sm:gap-y-12 pb-6 max-w-7xl'>
			<div class='flex sm:pr-4'>
				<div class='flex flex-col gap-4 md:gap-2 md:items-center'>
					<a href='#' class='flex md:flex-col gap-2 md:items-center'>
						<img src='/logoff.svg' alt='InterUp Logo' class='h-9 w-9' />
						<h6 class='text-xl font-sans font-bold text-green-normal'>InterUp</h6>
					</a>
					<p class='text-purple-light max-w-sm md:text-center'>Impulsamos tu negocio</p>
				</div>
			</div>

			<div class='flex flex-col gap-3 md:pr-4'>
				<h3 class='text-lg font-semibold text-green-normal'>Navegación</h3>
				<ul class='flex flex-col gap-2'>
					{
						menuItems.map((item) => (
							<li>
								<a href={item.href} class='text-purple-light hover:text-green-normal transition-colors'>
									{item.text}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<div class='flex flex-col gap-3 sm:pr-4 sm:pt-4 md:pt-0'>
				<h3 class='text-lg font-semibold text-green-normal'>Soluciones</h3>
				<ul class='flex flex-col gap-2'>
					{
						solutionItems.map((item) => (
							<li class='text-purple-light hover:text-green-normal transition-colors cursor-default'>{item.text}</li>
						))
					}
				</ul>
			</div>

			<div class='flex flex-col gap-3 sm:pt-4 md:pt-0'>
				<h3 class='text-lg font-semibold text-green-normal'>Contacto</h3>
				<div class='flex flex-col gap-2'>
					<p class='text-purple-light hover:text-green-normal transition-colors flex items-center gap-2'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
								d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
							></path>
						</svg>
						contacto@interup.dev
					</p>
					<a
						href={whatsappUrl}
						target='_blank'
						rel='noopener noreferrer'
						aria-label='Contáctanos por WhatsApp'
						class='text-purple-light hover:text-green-normal transition-colors flex items-center gap-2'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
								d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
							></path>
						</svg>
						+54 223 669 8045
					</a>
					<div class='text-purple-light flex items-center gap-2 hover:text-green-normal transition-colors'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
								d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z'></path>
							<path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 11a3 3 0 11-6 0 3 3 0 016 0z'
							></path>
						</svg>
						Buenos Aires, Argentina
					</div>
					<div class='flex gap-3 mt-1'>
						<span
							class='text-purple-light hover:text-green-normal transition-colors'
							aria-label='Síguenos en LinkedIn'
						>
							<svg xmlns='http://www.w3.org/2000/svg' class='h-5 w-5' fill='currentColor' viewBox='0 0 24 24'>
								<path
									d='M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z'
								></path>
							</svg>
						</span>
						<span
							class='text-purple-light hover:text-green-normal transition-colors'
							aria-label='Síguenos en Instagram'
						>
							<svg class='h-5 w-5' fill='currentColor' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'
								><title>Instagram</title><path
									d='M7.0301.084c-1.2768.0602-2.1487.264-2.911.5634-.7888.3075-1.4575.72-2.1228 1.3877-.6652.6677-1.075 1.3368-1.3802 2.127-.2954.7638-.4956 1.6365-.552 2.914-.0564 1.2775-.0689 1.6882-.0626 4.947.0062 3.2586.0206 3.6671.0825 4.9473.061 1.2765.264 2.1482.5635 2.9107.308.7889.72 1.4573 1.388 2.1228.6679.6655 1.3365 1.0743 2.1285 1.38.7632.295 1.6361.4961 2.9134.552 1.2773.056 1.6884.069 4.9462.0627 3.2578-.0062 3.668-.0207 4.9478-.0814 1.28-.0607 2.147-.2652 2.9098-.5633.7889-.3086 1.4578-.72 2.1228-1.3881.665-.6682 1.0745-1.3378 1.3795-2.1284.2957-.7632.4966-1.636.552-2.9124.056-1.2809.0692-1.6898.063-4.948-.0063-3.2583-.021-3.6668-.0817-4.9465-.0607-1.2797-.264-2.1487-.5633-2.9117-.3084-.7889-.72-1.4568-1.3876-2.1228C21.2982 1.33 20.628.9208 19.8378.6165 19.074.321 18.2017.1197 16.9244.0645 15.6471.0093 15.236-.005 11.977.0014 8.718.0076 8.31.0215 7.0301.0839m.1402 21.6932c-1.17-.0509-1.8053-.2453-2.2287-.408-.5606-.216-.96-.4771-1.3819-.895-.422-.4178-.6811-.8186-.9-1.378-.1644-.4234-.3624-1.058-.4171-2.228-.0595-1.2645-.072-1.6442-.079-4.848-.007-3.2037.0053-3.583.0607-4.848.05-1.169.2456-1.805.408-2.2282.216-.5613.4762-.96.895-1.3816.4188-.4217.8184-.6814 1.3783-.9003.423-.1651 1.0575-.3614 2.227-.4171 1.2655-.06 1.6447-.072 4.848-.079 3.2033-.007 3.5835.005 4.8495.0608 1.169.0508 1.8053.2445 2.228.408.5608.216.96.4754 1.3816.895.4217.4194.6816.8176.9005 1.3787.1653.4217.3617 1.056.4169 2.2263.0602 1.2655.0739 1.645.0796 4.848.0058 3.203-.0055 3.5834-.061 4.848-.051 1.17-.245 1.8055-.408 2.2294-.216.5604-.4763.96-.8954 1.3814-.419.4215-.8181.6811-1.3783.9-.4224.1649-1.0577.3617-2.2262.4174-1.2656.0595-1.6448.072-4.8493.079-3.2045.007-3.5825-.006-4.848-.0608M16.953 5.5864A1.44 1.44 0 1 0 18.39 4.144a1.44 1.44 0 0 0-1.437 1.4424M5.8385 12.012c.0067 3.4032 2.7706 6.1557 6.173 6.1493 3.4026-.0065 6.157-2.7701 6.1506-6.1733-.0065-3.4032-2.771-6.1565-6.174-6.1498-3.403.0067-6.156 2.771-6.1496 6.1738M8 12.0077a4 4 0 1 1 4.008 3.9921A3.9996 3.9996 0 0 1 8 12.0077'
								></path></svg
							>
						</span>
						<span
							class='text-purple-light hover:text-green-normal transition-colors'
							aria-label='Síguenos en X'
						>
							<svg class='h-5 w-5' fill='currentColor' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'
								><title>X</title><path
									d='M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z'
								></path></svg
							>
						</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
