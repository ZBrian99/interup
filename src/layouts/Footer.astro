---
const currentYear = new Date().getFullYear();

const menuItems = [
	{ href: '#inicio', text: 'Inicio' },
	{ href: '#servicios', text: 'Servicios' },
	{ href: '#proyectos', text: 'Proyectos' },
	{ href: '#contacto', text: 'Contacto' },
];

const solutionItems = [
	{ text: 'Páginas Web' },
	{ text: 'Aplicaciones Web' },
	{ text: 'Sistemas de Gestión' },
	{ text: 'E-commerce' },
];
---

<footer class='bg-purple-1 text-white pt-40'>
	<div class='bg-purple-3 relative z-10'>
		<img
			src='/footer-wave.svg'
			alt='footer wave'
			class='absolute top-0 left-0 right-0 h-[15%] sm:h-[30%] md:h-[75%] w-full lg:h-full -z-10 -translate-y-[96%]'
		/>
		<img
			src='/ovni.svg'
			alt='Fondo decorativo'
			class='absolute top-[-25%] sm:top-[-50%] md:top-[-110%] right-0 z-10 max-w-[50%]'
		/>
		<div class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 mx-auto px-6 gap-y-8 sm:gap-y-12 pb-6 max-w-7xl'>
			{/* Logo y descripción */}
			<div class='flex sm:pr-4'>
				<div class='flex flex-col gap-4 md:gap-2 md:items-center'>
					<a href='#inicio' class='flex md:flex-col gap-4 md:gap-2 md:items-center'>
						<img src='/logo.svg' alt='InterUp Logo' class='h-10 w-10' />
						<h6 class='text-xl font-sans font-bold text-green-normal'>InterUp</h6>
					</a>
					<p class='text-purple-light max-w-sm md:text-center'>Digitalizamos tu negocio</p>
				</div>
			</div>

			{/* Navegación */}
			<div class='flex flex-col gap-3 md:pr-4'>
				<h3 class='text-lg font-semibold text-green-normal'>Navegación</h3>
				<ul class='flex flex-col gap-2'>
					{
						menuItems.map((item) => (
							<li>
								<a href={item.href} class='text-purple-light hover:text-green-normal transition-colors'>
									{item.text}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			{/* Soluciones */}
			<div class='flex flex-col gap-3 sm:pr-4 sm:pt-4 md:pt-0'>
				<h3 class='text-lg font-semibold text-green-normal'>Soluciones</h3>
				<ul class='flex flex-col gap-2'>
					{
						solutionItems.map((item) => (
							<li class='text-purple-light hover:text-green-normal transition-colors cursor-default'>{item.text}</li>
						))
					}
				</ul>
			</div>

			{/* Contacto y Redes */}
			<div class='flex flex-col gap-3 sm:pt-4 md:pt-0'>
				<h3 class='text-lg font-semibold text-green-normal'>Contacto</h3>
				<div class='flex flex-col gap-2'>
					<p class='text-purple-light hover:text-green-normal transition-colors flex items-center gap-2'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
								d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
							></path>
						</svg>
						contacto@interup.dev
					</p>
					<a
						href='https://wa.me/34666666666'
						class='text-purple-light hover:text-green-normal transition-colors flex items-center gap-2'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
								d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
							></path>
						</svg>
						+34 666 666 666
					</a>
					<div class='text-purple-light flex items-center gap-2'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-5 w-5'
							viewBox='0 0 24 24'
							fill='none'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
