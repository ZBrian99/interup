---
import WorkProcessCard from './WorkProcessCard.astro';

interface WorkStep {
	nombre: string;
	descripcion: string;
	icon: string;
}

const pasos: WorkStep[] = [
	{
		nombre: 'Primer Contacto',
		descripcion: 'Nos reunimos para conocer tus ideas y objetivos, entendiendo qué necesitas y cómo podemos ayudarte.',
		icon: '/1_2.svg',
	},
	{
		nombre: 'Planificación de Misión',
		descripcion:
			'Trazamos un plan detallado, definiendo las etapas y recursos necesarios para hacer realidad tu proyecto.',
		icon: '/2_1.svg',
	},
	{
		nombre: 'Montaje de Módulos',
		descripcion:
			'Construimos tu proyecto paso a paso, manteniendo una comunicación constante y adaptándonos a tus necesidades.',
		icon: '/3_2.svg',
	},
	{
		nombre: 'Lanzamiento Espacial',
		descripcion:
			'Lanzamos tu proyecto al universo digital, asegurándonos de que cada componente esté listo para un despegue exitoso.',
		icon: '/4_1.svg',
	},
	{
		nombre: 'Control de Navegación',
		descripcion:
			'Monitorizamos la trayectoria de tu proyecto, realizando los ajustes necesarios para mantener un rendimiento óptimo.',
		icon: '/5_2.svg',
	},
];
---

<section class='py-20 relative z-10'>
	<h2 class='text-2xl md:text-4xl font-bold text-green-normal text-center mb-16 z-10'>Fases del Proyecto</h2>

	<div class='flex flex-col mx-auto md:max-w-3xl md2:max-w-7xl px-6 lg:px-8'>
		{pasos.map((paso, index) => <WorkProcessCard {...paso} index={index} isLast={index === pasos.length - 1} />)}
	</div>

	<img src='/navecita.svg' alt='Fondo decorativo' class='absolute -top-10 left-0 -z-10 max-w-[50%]' />
	<img src='/nave.svg' alt='Fondo decorativo' class='absolute -bottom-16 md2:bottom-0 right-0 z-10 max-w-[50%]' />
	<img
		src='/curva2.svg'
		alt='Fondo decorativo'
		class='absolute w-full h-[40%] object-cover object-right scale-x-[-1] lg:object-fill bottom-[-10%] md:bottom-[-14%] lg:h-[50%] lg:bottom-[-15%]'
	/>
</section>
