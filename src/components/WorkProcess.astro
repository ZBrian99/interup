---
interface Step {
	number: number;
	title: string;
	description: string;
}

const steps: Step[] = [
	{
		number: 1,
		title: 'Análisis y Planificación',
		description: 'Estudiamos tus necesidades y desarrollamos una estrategia personalizada.',
	},
	{
		number: 2,
		title: 'Diseño y Desarrollo',
		description: 'Creamos soluciones innovadoras siguiendo las mejores prácticas del sector.',
	},
	{
		number: 3,
		title: 'Testing y Optimización',
		description: 'Realizamos pruebas exhaustivas para garantizar la calidad del producto.',
	},
	{
		number: 4,
		title: 'Implementación y Soporte',
		description: 'Desplegamos la solución y proporcionamos soporte continuo.',
	},
];
---

<section class='py-16 bg-purple-1'>
	<div class='container mx-auto px-4 relative'>
		<h2 class='text-4xl text-center mb-12 text-green-normal'>¿Cómo Trabajamos?</h2>

		<div class='flex flex-col md:flex-row flex-wrap justify-center gap-8'>
			{
				steps.map((step) => (
					<div class='flex-1 min-w-[250px] max-w-[300px] '>
						<div class=''>
							<div class='w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center text-xl font-bold mb-4'>
								{step.number}
							</div>
							{step.number !== steps.length && (
								<div class='hidden md:block absolute top-6 left-12 w-full h-0.5 bg-gray-300 -z-10' />
							)}
						</div>
						<h3 class='text-xl font-semibold mb-3'>{step.title}</h3>
						<p class='text-gray-600'>{step.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>
