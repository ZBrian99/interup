---
interface Reason {
	title: string;
	icon: string;
}

const reasons: Reason[] = [
	{
		title: 'Enfoque Personalizado',
		icon: '🎯',
	},
	{
		title: 'Tecnología Modernas',
		icon: '🚀',
	},
	{
		title: 'Compromiso Total',
		icon: '🤝',
	},
	{
		title: 'Innovación Constante',
		icon: '💡',
	},
	{
		title: 'Mejora Continua',
		icon: '📈',
	},
];
---

<div class='w-full lg:w-1/2 flex aspect-square items-center justify-center mx-auto border relative overflow-hidden'>
	<div
		class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-4 w-24 h-24 xs:w-28 xs:h-28 sm:w-32 sm:h-32 sm:p-5 md:w-48 md:h-48 md:p-8 lg:w-44 lg:h-44 lg:p-7 xl:p-8 xl:w-48 xl:h-48 bg-purple-2 border border-purple-light/20 rounded-full flex flex-col items-center justify-center text-center hover:bg-purple-3 transition-colors duration-300'
	>
		<span class='text-lg xs:text-xl sm:text-2xl text-green-normal mb-1 sm:mb-2'>💫</span>
		<h4 class='text-sm xs:text-base sm:text-lg font-semibold text-white'>Transformamos Ideas</h4>
	</div>

	{
		reasons.map((reason, index) => {
			const angle = (index * 72 * Math.PI) / 180;
			const baseRadius = 100; 
			const radius = `calc(min(${baseRadius}px + 7vw, 210px))`;
			const x = `calc(cos(${angle}rad) * ${radius})`;
			const y = `calc(sin(${angle}rad) * ${radius})`;

			return (
				<div
					class='absolute top-1/2 left-1/2 rounded-full flex flex-col items-center justify-center text-center border border-purple-light/20 bg-purple-2 hover:bg-purple-3 transition-colors duration-300 p-3 w-20 h-20 xs:w-24 xs:h-24 xs:p-4 sm:w-28 sm:h-28 sm:p-4 md:w-36 md:h-36 md:p-8 lg:w-[8.5rem] lg:h-[8.5rem] xl:p-8 xl:w-36 xl:h-36'
					style={{ transform: `translate(calc(-50% + ${x}), calc(-50% + ${y}))` }}
				>
					<span class='text-base xs:text-lg sm:text-xl text-green-normal mb-1 sm:mb-2'>{reason.icon}</span>
					<h4 class='text-sm sm:text-base lg:text-sm font-semibold text-white leading-tight'>{reason.title}</h4>
				</div>
			);
		})
	}
</div>
