---
import ServiceCard from './ServiceCard.astro';
const services = [
	{
		title: 'Asesoría Estelar',
		description:
			'Analizamos y definimos la ruta ideal para tu proyecto, estableciendo objetivos claros y alcanzables.',
		icon: '/service1 copy.svg',
		link: '/',
		color: 'tag-blue',
	},
	{
		title: 'Desarrollo Universal',
		description: 'Transformamos tus ideas en soluciones a medida, priorizando calidad y rendimiento óptimo.',
		icon: '/service2 copy.svg',
		link: '/',
		color: 'tag-pink',
	},
	{
		title: 'Mantenimiento Orbital',
		description: 'Mantenemos tu proyecto actualizado y seguro, implementando mejoras para su crecimiento continuo.',
		icon: '/service3 copy.svg',
		link: '/',
		color: 'tag-orange',
	},
];
---

<section class='py-20 flex items-center justify-center relative'>
	<div class='mx-auto max-w-7xl px-6 lg:px-8'>
		<h2 class='text-2xl md:text-4xl font-bold text-green-normal text-center mb-16'>Nuestros Servicios</h2>

		<div
			class='flex flex-col md:flex-row md:flex-wrap lg:flex-nowrap justify-center items-center md:items-stretch gap-8'
		>
			{services.map((service, index) => <ServiceCard {...service} index={index} />)}
		</div>
	</div>

	<img
		src='/curva1.svg'
		alt='Fondo decorativo'
		class='absolute w-full h-[50%] object-cover lg:object-fill bottom-[-12%] lg:h-full lg:bottom-[-20%]'
	/>
</section>
