---
import ServiceCard from './ServiceCard.astro';
const services = [
	{
		title: 'Asesoría Estelar',
		description:
			'Analizamos y definimos juntos la ruta ideal para tu proyecto, estableciendo objetivos claros y alcanzables.',
		icon: '/service1.svg',
		link: '/',
		color: 'tag-blue',
	},
	{
		title: 'Desarrollo Universal',
		description:
			'Transformamos tus ideas en soluciones a medida, priorizando calidad y rendimiento óptimo.',
		icon: '/service2.svg',
		link: '/',
		color: 'tag-pink',
	},
	{
		title: 'Mantenimiento Orbital',
		description:
			'Mantenemos tu proyecto actualizado y seguro, implementando mejoras para su crecimiento continuo.',
		icon: '/service3.svg',
		link: '/',
		color: 'tag-orange',
	},
];
---

<section class='py-20 flex items-center justify-center bg-purple-1 animate-slide-up-lg'>
	<div class='absolute w-[120%] h-[100%] bg-planet'></div>

	<div class='container mx-auto px-4 max-w-7xl'>
		<h2 class='text-center text-green-normal mb-16'>Nuestros servicios</h2>

		<div class='flex gap-8 justify-center flex-col lg:flex-row'>
			{services.map((service, index) => <ServiceCard {...service} index={index} />)}
		</div>
	</div>
	<!-- <img src='/curva1.svg' alt='Fondo decorativo' class='absolute bottom-0 object-cover w-full h-auto translate-y-1/2 -z-50' /> -->
	<!-- <div class='absolute bottom-[-50%] w-full h-auto'> -->
	<img
		src='/curva1.svg'
		alt='Fondo decorativo'
		class='absolute bottom-[-10%] md:bottom-[-25%] w-full h-auto object-cover -z-50'
	/>
	<!-- </div> -->
</section>

<style>
	.bg-planet {
		background-image: url('/planeta.webp');
		background-position: center top;
		background-size: contain cover;
		background-repeat: no-repeat;
		/* height: 40%; */
		/* max-height: 40%; */
		/* max-width: 100%; */
		position: absolute;
		top: -50%;
		/* margin-top: auto; */
	}
</style>
